# Nixpacks configuration for Railway deployment

[phases.setup]
nixPkgs = ["python311", "python311Packages.pip", "python311Packages.setuptools"]

[phases.install]
cmds = ["pip install --upgrade pip", "pip install -r backend/requirements.txt"]

[start]
cmd = "cd backend && python -m uvicorn api.main:app --host 0.0.0.0 --port $PORT"
